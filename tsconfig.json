{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@src/*": ["src/*"],
            "@test/*": ["test/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
